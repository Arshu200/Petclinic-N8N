pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        git url: 'https://github.com/Arshu200/Petclinic-N8N.git'
      }
    }
    stage('Build') {
      steps {
        sh 'mvn clean package'
      }
    }
    stage('Test') {
      steps {
        sh 'mvn test'
      }
    }
    stage('Deploy') {
      steps {
        sh 'echo "Deploying application..."'
      }
    }
  }

  post {
    failure {
      echo "Pipeline failed. Please check the logs for details."
    }
    success {
      echo "Pipeline succeeded!"
    }
  }
}